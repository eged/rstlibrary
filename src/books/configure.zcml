<configure xmlns="http://namespaces.repoze.org/bfg">

  <view
    route_name="books"
    context=".interfaces.IBook"
    view=".views.BookView"
    renderer="templates/book.pt"
   />

  <view
    route_name="books"
    context=".interfaces.ISection"
